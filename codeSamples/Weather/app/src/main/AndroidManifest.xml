<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="weather_finaltest.centaurosolutions.com.weather" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="controllers.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WeatherTabActivity"
            android:label="@string/title_activity_weather_tab" >
        </activity>
        <activity
            android:name=".WeatherHistoryTabActivity"
            android:label="@string/title_activity_weather_history_tab" >
        </activity>
        <activity
            android:name=".WeatherListActivity"
            android:label="@string/title_activity_weather_list" >
        </activity>
    </application>

</manifest>
